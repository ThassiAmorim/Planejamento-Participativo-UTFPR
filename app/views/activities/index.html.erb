
<%= stylesheet_link_tag 'activity' %>

  <div class="background"></div>
    <div class="container">
      <% if notice %>
        <p style="color: green"><%= notice %></p>
      <% end %>

      <h1>Atividades</h1>

      <div class="search-bar">
        <%= form_tag search_activities_path, method: :get do %>
            <div class="form-group">
              <%= text_field_tag :query, params[:query], placeholder: "Nome da Atividade" %>
            </div>
            <div class="form-group">
              <%= select_tag :filter, options_for_select(["Todos", "Graduação", "Pesquisa e Pós-Graduação", "Relações Empresariais e Comunitárias", "Infraestrutura", "Gestão do Campus", "Servidores", "Processos", "Comunidade Acadêmica", "Registro RG"], params[:filter]), class: "form-control" %>
            </div>
            <%= submit_tag "Buscar", class: "btn btn-primary" %>
        <% end %>

    </div>


      <div class="activities">

        <% if user_signed_in? %>
          <%= link_to "Adicionar atividade", new_activity_path, class: "new-activity-link" %>
        <% end %>
        <% @activities.each do |activity| %>
          <div class="activity">
            <%= render activity %>
            <p>
              <%= link_to "Detalhes", activity %>
            </p>
          </div>
        <% end %>
      </div>

      
    </div>
  </div>
